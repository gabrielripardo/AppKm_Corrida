<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tipo_tV"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Nova Meta"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_width="355dp"
            android:layout_height="82dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/comment_tIET"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:hint="Comentário" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="80dp"
            android:layout_height="69dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/if_target"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3">

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/fundoTempo"
                    android:layout_width="175dp"
                    android:layout_height="249dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/alert_light_frame"
                    android:scaleType="center"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />
                <!--  android:src="?android:attr/textColorSearchUrl" -->

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="37dp"
                    android:layout_height="49dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_way"
                    app:layout_constraintStart_toStartOf="@+id/fundoTempo"
                    app:layout_constraintTop_toTopOf="@+id/linearLayout9" />

                <LinearLayout
                    android:id="@+id/linearLayout9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@+id/fundoTempo"
                    app:layout_constraintEnd_toEndOf="@+id/fundoTempo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/fundoTempo">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:text="Percurso"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_dark"
                        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.038"
                        app:layout_constraintStart_toStartOf="parent">

                    </TextView>

                    <LinearLayout
                        android:id="@+id/linearLayout5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="@+id/fundoTempo"
                        app:layout_constraintEnd_toEndOf="@+id/fundoTempo"
                        app:layout_constraintHorizontal_bias="0.493"
                        app:layout_constraintStart_toStartOf="@+id/fundoTempo">

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/increment_btnF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:src="@drawable/ic_mais_blue"
                            app:backgroundTint="#2e2e2e"
                            tools:layout_editor_absoluteX="265dp"
                            tools:layout_editor_absoluteY="116dp" />

                        <EditText
                            android:id="@+id/km_tV"
                            android:layout_width="70dp"
                            android:layout_height="62dp"
                            android:layout_gravity="center"
                            android:ems="10"
                            android:fontFamily="serif"
                            android:inputType="textPersonName"
                            android:text="0.0"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="40sp"
                            tools:layout_editor_absoluteX="245dp"
                            tools:layout_editor_absoluteY="156dp" />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/decrement_btnF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:src="@drawable/ic_menos_blue"
                            app:backgroundTint="#2e2e2e"
                            tools:layout_editor_absoluteX="265dp"
                            tools:layout_editor_absoluteY="218dp" />

                    </LinearLayout>
                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/fundoPercurso"
                    android:layout_width="175dp"
                    android:layout_height="249dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/alert_light_frame"
                    android:scaleType="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="37dp"
                    android:layout_height="49dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_clock"
                    app:layout_constraintStart_toStartOf="@+id/fundoPercurso"
                    app:layout_constraintTop_toTopOf="@+id/fundoPercurso" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0"
                    android:text="Tempo Máximo"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark"
                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                    app:layout_constraintTop_toTopOf="@+id/fundoPercurso">

                </TextView>

                <LinearLayout
                    android:id="@+id/linearLayout10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/fundoPercurso"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    app:layout_constraintVertical_bias="0.253">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="@+id/fundoPercurso"
                        app:layout_constraintEnd_toEndOf="@+id/fundoPercurso">

                        <ImageView
                            android:layout_width="2dp"
                            android:layout_height="115dp"
                            android:layout_weight="1"
                            android:src="#de0f0f0f"
                            tools:layout_editor_absoluteX="264dp"
                            tools:layout_editor_absoluteY="179dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toTopOf="@+id/textInputLayout2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/increment_btnF"
                            app:layout_constraintVertical_bias="1.0">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_weight="1"
                                android:src="#de0f0f0f"
                                tools:layout_editor_absoluteX="16dp"
                                tools:layout_editor_absoluteY="249dp" />

                            <Button
                                android:id="@+id/incremHora_btn"
                                android:layout_width="54dp"
                                android:layout_height="40dp"
                                android:background="#2e2e2e"
                                android:text="+"
                                android:textColor="@android:color/background_light"
                                tools:layout_editor_absoluteX="30dp"
                                tools:layout_editor_absoluteY="164dp" />

                            <TextView
                                android:id="@+id/horas_eT"
                                android:layout_width="55dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:inputType="numberDecimal"
                                android:textAlignment="center"
                                android:textSize="23sp" />

                            <Button
                                android:id="@+id/decremHora_btn"
                                android:layout_width="54dp"
                                android:layout_height="40dp"
                                android:background="#2e2e2e"
                                android:text="-"
                                android:textColor="@android:color/background_light"
                                tools:layout_editor_absoluteX="30dp"
                                tools:layout_editor_absoluteY="164dp" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_weight="1"
                                android:src="#de0f0f0f"
                                tools:layout_editor_absoluteX="16dp"
                                tools:layout_editor_absoluteY="249dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="2dp"
                            android:layout_height="115dp"
                            android:layout_weight="1"
                            android:src="#de0f0f0f"
                            tools:layout_editor_absoluteX="264dp"
                            tools:layout_editor_absoluteY="179dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=":"
                        android:textSize="20sp"
                        tools:layout_editor_absoluteX="92dp"
                        tools:layout_editor_absoluteY="152dp" />

                    <LinearLayout
                        android:id="@+id/linearLayout7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginStart="0dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="@+id/fundoPercurso"
                        app:layout_constraintStart_toStartOf="parent">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="2dp"
                            android:layout_height="115dp"
                            android:layout_weight="1"
                            android:src="#de0f0f0f"
                            tools:layout_editor_absoluteX="264dp"
                            tools:layout_editor_absoluteY="179dp" />

                        <LinearLayout
                            android:id="@+id/linearLayout3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toTopOf="@+id/textInputLayout2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/increment_btnF"
                            app:layout_constraintVertical_bias="1.0">

                            <ImageView
                                android:id="@+id/imageView8"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_weight="1"
                                android:src="#de0f0f0f"
                                tools:layout_editor_absoluteX="16dp"
                                tools:layout_editor_absoluteY="249dp" />

                            <Button
                                android:id="@+id/incremMin_btn"
                                android:layout_width="54dp"
                                android:layout_height="40dp"
                                android:background="#2e2e2e"
                                android:text="+"
                                android:textColor="@android:color/background_light"
                                tools:layout_editor_absoluteX="30dp"
                                tools:layout_editor_absoluteY="164dp" />

                            <TextView
                                android:id="@+id/minutos_eT"
                                android:layout_width="55dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:inputType="numberDecimal"
                                android:textAlignment="center"
                                android:textSize="23sp" />

                            <Button
                                android:id="@+id/decremMin_btn"
                                android:layout_width="54dp"
                                android:layout_height="40dp"
                                android:background="#2e2e2e"
                                android:text="-"
                                android:textColor="@android:color/background_light"
                                tools:layout_editor_absoluteX="30dp"
                                tools:layout_editor_absoluteY="164dp" />

                            <ImageView
                                android:id="@+id/imageView9"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_weight="1"
                                android:src="#de0f0f0f"
                                tools:layout_editor_absoluteX="16dp"
                                tools:layout_editor_absoluteY="249dp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="2dp"
                            android:layout_height="115dp"
                            android:layout_weight="1"
                            android:src="#de0f0f0f"
                            tools:layout_editor_absoluteX="264dp"
                            tools:layout_editor_absoluteY="179dp" />

                    </LinearLayout>
                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
            app:layout_constraintVertical_bias="0.0">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/correr_btnF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/ic_play"
                app:backgroundTint="#2899c0"
                app:rippleColor="@android:color/background_light"
                tools:layout_editor_absoluteX="244dp"
                tools:layout_editor_absoluteY="442dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/salvar_btnF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/ic_save"
                app:backgroundTint="#2899c0"
                app:rippleColor="@android:color/background_light"
                tools:layout_editor_absoluteX="244dp"
                tools:layout_editor_absoluteY="442dp" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>